<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="530.0" prefWidth="880.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sdg13ver5.Controller">
   <children>

      <!-- RIGHT: background photo -->
      <ImageView fitHeight="530.0" fitWidth="570.0" pickOnBounds="true" preserveRatio="false"
                 mouseTransparent="true"
                 AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
         <image><Image url="@image/bg-admin.jpg" /></image>
      </ImageView>
      <Rectangle fill="rgba(0,0,0,0.40)" height="530.0" width="570.0" mouseTransparent="true"
                 AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />

      <!-- LEFT: dark grey panel -->
      <VBox prefWidth="310.0" spacing="0.0"
            style="-fx-background-color: #3c3c3c;"
            AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
         <padding><Insets top="48.0" right="28.0" bottom="28.0" left="28.0" /></padding>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="12.0">
               <children>
                  <ImageView fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                     <image><Image url="@image/Sustainable_Development_Goal_13.png" /></image>
                  </ImageView>
                  <Text text="SDG-13"
                        style="-fx-font-size: 50px; -fx-font-weight: bold; -fx-font-family: 'Arial Bold'; -fx-fill: #4ade80;" />
               </children>
            </HBox>

            <VBox prefHeight="32.0" />

            <Text text="Admin Access"
                  style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-font-family: 'Arial Bold'; -fx-fill: white;" />
            <Text text="Enter admin password to continue."
                  style="-fx-font-size: 14px; -fx-font-family: Arial; -fx-fill: #9ca3af;" />

            <VBox prefHeight="32.0" />

            <Label text="Admin Password"
                   style="-fx-font-size: 13px; -fx-font-family: 'Segoe UI'; -fx-text-fill: #d1d5db; -fx-padding: 0 0 4 0;" />
            <AnchorPane>
               <children>
                  <PasswordField fx:id="adminpass" promptText="Enter admin password"
                                 style="-fx-background-color: #4b5563; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #6b7280; -fx-border-width: 1; -fx-padding: 10 40 10 12; -fx-font-size: 14px; -fx-text-fill: white; -fx-prompt-text-fill: #9ca3af;"
                                 prefHeight="40.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
                  <TextField fx:id="adminpassVisible" promptText="Enter admin password" visible="false"
                             style="-fx-background-color: #4b5563; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #6b7280; -fx-border-width: 1; -fx-padding: 10 40 10 12; -fx-font-size: 14px; -fx-text-fill: white; -fx-prompt-text-fill: #9ca3af;"
                             prefHeight="40.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
                  <Button fx:id="toggleAdminPasswordBtn" onAction="#toggleAdminPassword" text="â—Ž"
                          style="-fx-background-color: transparent; -fx-text-fill: #9ca3af; -fx-cursor: hand; -fx-font-size: 16px;"
                          AnchorPane.rightAnchor="8.0" AnchorPane.topAnchor="4.0" />
               </children>
            </AnchorPane>

            <VBox prefHeight="8.0" />

            <Label fx:id="Invalid_User_Pass" textFill="#f87171"
                   style="-fx-font-size: 12px; -fx-font-family: 'Segoe UI';" />

            <VBox prefHeight="20.0" />

            <Button onAction="#adminlogin" text="Sign In as Admin" maxWidth="Infinity" prefHeight="44.0"
                    style="-fx-background-color: #166534; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI'; -fx-background-radius: 8; -fx-cursor: hand;" />

            <VBox prefHeight="16.0" />

            <Button onAction="#adminlogtomain" text="Back to Login" maxWidth="Infinity" prefHeight="40.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-family: 'Segoe UI'; -fx-border-color: #6b7280; -fx-border-radius: 8; -fx-background-radius: 8; -fx-cursor: hand;" />
         </children>
      </VBox>

   </children>
</AnchorPane>
