{
  "$schema": "Design tokens for SDG-13 Climate Action JavaFX application",
  "$version": "1.0.0",

  "color": {
    "primary": {
      "base": "#166534",
      "hover": "#15803d",
      "dark": "#14532d",
      "light": "#F0FDF4",
      "lighter": "#DCFCE7",
      "icon-bg": "#d1fae5"
    },
    "neutral": {
      "50": "#F9FAFB",
      "100": "#F3F4F6",
      "200": "#E5E7EB",
      "300": "#D1D5DB",
      "400": "#9CA3AF",
      "500": "#6B7280",
      "600": "#4B5563",
      "700": "#374151",
      "800": "#1F2937",
      "900": "#111827"
    },
    "semantic": {
      "error": "#B91C1C",
      "error-bg": "#FEF2F2",
      "success": "#166534",
      "success-bg": "#F0FDF4",
      "info": "#2563EB",
      "info-bg": "#EFF6FF",
      "warning": "#D97706",
      "warning-bg": "#FFFBEB"
    },
    "surface": {
      "body": "#F3F4F6",
      "card": "#FFFFFF",
      "overlay-dark": "rgba(0, 0, 0, 0.50)",
      "overlay-light": "rgba(0, 0, 0, 0.15)",
      "frosted": "rgba(243, 244, 246, 0.95)"
    },
    "accent": {
      "blue": "#3B82F6",
      "blue-bg": "#dbeafe"
    }
  },

  "typography": {
    "font-family": {
      "primary": "\"Segoe UI\", Arial, sans-serif",
      "emoji": "\"Segoe UI Emoji\", \"Segoe UI Symbol\", Arial"
    },
    "scale": {
      "hero":    { "size": "64px", "weight": "bold",   "line-height": "1.1" },
      "h1":     { "size": "44px", "weight": "bold",   "line-height": "1.2" },
      "h2":     { "size": "28px", "weight": "bold",   "line-height": "1.3" },
      "h3":     { "size": "20px", "weight": "bold",   "line-height": "1.4" },
      "body-lg":{ "size": "16px", "weight": "normal", "line-height": "1.5" },
      "body":   { "size": "14px", "weight": "normal", "line-height": "1.5" },
      "label":  { "size": "14px", "weight": "bold",   "line-height": "1.4" },
      "nav":    { "size": "15px", "weight": "bold",   "line-height": "1.4" },
      "caption":{ "size": "13px", "weight": "normal", "line-height": "1.4" },
      "small":  { "size": "12px", "weight": "normal", "line-height": "1.4" }
    }
  },

  "spacing": {
    "unit": "4px",
    "scale": {
      "0":  "0px",
      "1":  "4px",
      "2":  "8px",
      "3":  "12px",
      "4":  "16px",
      "5":  "20px",
      "6":  "24px",
      "8":  "32px",
      "9":  "36px",
      "10": "40px",
      "12": "48px",
      "16": "64px",
      "20": "80px",
      "24": "96px"
    }
  },

  "radius": {
    "none": "0px",
    "sm":   "4px",
    "md":   "6px",
    "lg":   "12px",
    "xl":   "16px",
    "2xl":  "20px",
    "full": "9999px"
  },

  "shadow": {
    "sm":   "dropshadow(gaussian, rgba(0,0,0,0.08), 4, 0, 0, 2)",
    "md":   "dropshadow(gaussian, rgba(0,0,0,0.12), 12, 0, 0, 4)",
    "lg":   "dropshadow(gaussian, rgba(0,0,0,0.12), 24, 0, 0, 8)",
    "xl":   "dropshadow(gaussian, rgba(0,0,0,0.20), 30, 0, 0, 8)",
    "focus-primary": "dropshadow(gaussian, rgba(22,101,52,0.15), 4, 0, 0, 0)",
    "focus-error":   "dropshadow(gaussian, rgba(185,28,28,0.15), 4, 0, 0, 0)"
  },

  "animation": {
    "duration": {
      "instant": "50ms",
      "fast":    "100ms",
      "normal":  "200ms",
      "slow":    "300ms"
    },
    "easing": {
      "ease-out":    "ease-out",
      "ease-in-out": "ease-in-out"
    }
  },

  "layout": {
    "nav-rail": {
      "expanded": "240px",
      "collapsed": "64px"
    },
    "header-height": "96px",
    "min-touch-target": "44px",
    "breakpoints": {
      "compact": "1024px",
      "default": "1280px"
    },
    "content-max-width": "1040px"
  },

  "border": {
    "width": {
      "default": "1px",
      "focus":   "2px",
      "active":  "4px"
    },
    "color": {
      "default": "#D1D5DB",
      "focus":   "#166534",
      "error":   "#B91C1C",
      "focus-ring": "#2563EB"
    }
  }
}
